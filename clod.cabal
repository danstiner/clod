name:                clod
version:             0.0.2.0
synopsis:            git-inspired command line utilities
description:         Command line utility for managing files inspired by git
license:             MIT
license-file:        LICENSE
author:              Daniel Stiner
maintainer:          Daniel Stiner <daniel.stiner@gmail.com>
stability:           experimental
homepage:            http://github.com/danstiner/clod
bug-reports:         http://github.com/danstiner/clod/issues
category:            Data, Network, Web
build-type:          Simple
cabal-version:       >=1.9.2
tested-with:         GHC==7.6.3, GHC==7.8.2

Flag LevelDB
  Description: Enable support for LevelDB store
  Default:     False
executable clod
  Hs-Source-Dirs:      src
  Main-Is:             Main.hs
  GHC-Options:         -Wall -threaded -O3
  Build-Depends:       base >= 4.5 && < 5
                     , aeson
                     , base16-bytestring
                     , binary
                     , bytestring
                     , deepseq
                     , deepseq-generics
                     , containers
                     , cryptohash
                     , digest
                     , directory
                     , filepath
                     , hslogger
                     , http-conduit
                     , MissingH
                     , mtl
                     , optparse-applicative >= 0.9.0
                     , pipes < 4.0
                     , resourcet
                     , text
                     , transformers

  if flag(LevelDB)
    Build-Depends: higher-leveldb >= 0.1.0.3
    CPP-Options: -DWITH_LEVELDBs

Test-suite unittests
  Type:                exitcode-stdio-1.0
  Hs-Source-Dirs:      src test
  Main-Is:             TestSuite.hs
  GHC-Options:         -Wall -fwarn-tabs -threaded -O
  Build-Depends:      base >= 4 && < 5
                     , aeson
                     , base16-bytestring
                     , binary
                     , bytestring
                     , containers
                     , cryptohash
                     , digest
                     , deepseq
                     , deepseq-generics
                     , directory
                     , filepath
                     , hslogger
                     , http-conduit
                     , MissingH
                     , mtl
                     , optparse-applicative >= 0.9.0
                     , pipes < 4.0
                     , resourcet
                     , text
                     , transformers

                     , HUnit
                     , QuickCheck
                     , test-framework
                     , test-framework-hunit
                     , test-framework-quickcheck2

source-repository head
  type: git
  location: git://github.com:danstiner/clod.git
